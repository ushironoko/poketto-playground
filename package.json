{
  "name": "poketto-playground",
  "version": "1.0.0",
  "main": "main.ts",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "vue": "^3.0.0-beta.9",
    "vue-router": "^4.0.0-alpha.7",
    "poketto-components": "*",
    "vite": "^0.10.0",
    "@vue/compiler-sfc": "^3.0.0-beta.7"
  },
  "scripts": {
    "dev": "webpack-dev-server --mode=development",
    "build": "webpack --progress --mode=production",
    "vite-dev": "lerna run --scope @poketto/* dev --stream",
    "vite-build": "lerna run --scope @poketto/* build --stream",
    "lint": "eslint --ext .ts,.vue .",
    "rm": "lerna exec -- rm -rf node_modules && rm -rf node_modules",
    "fix": "eslint --fix --ext .ts,.vue ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^7.0.0-alpha.0",
    "html-webpack-plugin": "^4.2.0",
    "lerna": "^3.20.2",
    "prettier": "^2.0.4",
    "ts-loader": "^7.0.1",
    "typescript": "^3.8.3",
    "vue-loader": "^16.0.0-alpha.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "alias": {
    "~": "./src/*",
    "@": "./src/*"
  },
  "workspaces": [
    "src/*",
    "packages/*"
  ]
}
